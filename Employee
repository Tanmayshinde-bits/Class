CODE:

package employee;
import java.util.Scanner;                                     //Importing java library 

public class Employee {                                       // initialization of allm the datatypes
    String name;
        float salary;
        String address;
        float doj;
public void getInput(){                                       // inputing of data
    Scanner in = new Scanner(System.in);
    System.out.print("Enter the name :: ");
     name = in.next();
     System.out.print("Enter the salary :: ");
  salary = in.nextFloat();
  System.out.print("Enter the address:: ");
  address = in.next();
  System.out.print("Enter the doj :: ");
  doj = in.nextFloat();
}
public void display() {                                           // displaying the given input
    System.out.println("Employee name = " + name);
  System.out.println("Employee salary = " + salary);
  System.out.println("Employee address = " + address);
  System.out.println("Employee doj = "+ doj);
}
 
    public static void main(String[] args) {
        Class e[] = new Class[5];                                 
  
  for(int i=0; i<5; i++) {                                       // initialization of FOR loop
   
   e[i] = new Class();
   e[i].getInput();
  }
  
  System.out.println(" Data Entered as below:");                // Printing the given output
  
  for(int i=0; i<5; i++) {
   
   e[i].display();
        
    }
  }
  
  
  
